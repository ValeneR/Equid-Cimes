{% extends 'base.html.twig' %}

{% block title %}Espace membres{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h1>Espace membres</h1>
    <div class="container">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Pseudo:</label>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
            </div>

            <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe:</label>
                <input type="password" class="form-control" id="password" name="_password"/>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="buttonLogin" href="{{ path("login") }}">Se connecter</button>
        </form>
{% endblock %}
